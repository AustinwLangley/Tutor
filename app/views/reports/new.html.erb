<h1>Add a new report</h1>

<%= form_for @report do |f| %>

    <div>
        <%= f.label :student_id %>
        <%= f.text_field :student_id %>
    </div>

    <div>
        <%= f.label :teacher_id %>
        <%= f.text_field :teacher_id %>
    </div>

    <div>
        <%= f.label :what_was_covered %>
        <%= f.text_area :what_was_covered %>
    </div>

    <div>
        <%= f.label :performance %>
        <%= f.text_area :performance %>
    </div>

    <div>
        <%= f.label :assignment %>
        <%= f.text_area :assignment %>
    </div>
    <br>
    <%= f.submit "Add new report" %>

<% end %>
<br>
<%= link_to "Back to today's reports", reports_path %>